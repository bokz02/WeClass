<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeClass" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkText</item>
        <item name="colorPrimaryVariant">@color/darkText</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black2</item>
        <item name="colorSecondaryVariant">@color/black2</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->

    </style>

   <style name="BottomAppBarOverlay">
       <item name="colorControlNormal">@color/white</item>

   </style>

    <style name="Theme.Dialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black1</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/menuBackGround</item>
    </style>

    <style name="Theme.Calendar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black1</item>
        <item name="colorAccent">@color/red2</item>
    </style>


    <!-- for customizing material alert dialog -->
    <style name="CustomMaterialDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialDialogTextContext</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="colorAccent">@color/AlertButtonColor</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="MaterialDialogTextContext" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/AlertDialogTitleColor</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/AlertButtonColor</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/AlertButtonColor</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>
    <!-- for customizing material alert dialog -->


    <!-- for customizing time picker dialog -->
    <style name="Theme.TimeDialog" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorAccent">@color/TimePickerColor</item>
        <item name="colorPrimary">@color/TimePickerColor</item>
        <item name="colorSecondaryVariant">@color/TimePickerColor</item>
        <!-- for customizing time picker dialog -->

        <!-- Switch button -->
        <item name="colorControlActivated">#E57373</item>
        <item name="colorSwitchThumbNormal">@color/white1</item>
        <item name="trackTint">#F44336</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorAccent">@color/navigation_text_color</item>
    </style>

    <style name="Theme.AppCompat.Custom"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/splashScreenBackground</item>
    </style>

    <style name="Theme.NothingTheme" parent="Theme.MaterialComponents.Light">

    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black1</item>
    </style>

    <!-- CardView Background color -->
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="colorAccent">@color/CardViewEditTextCursor</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="PoppinsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>


    <style name="Theme.WeClass.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="colorAccent">@color/red2</item>

    </style>


    <!-- SplashScreen -->

    -<style parent="Theme.MaterialComponents.DayNight.NoActionBar" name="SplashScreen">

    <item name="android:windowBackground">@drawable/bg_splash</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>

</style>

</resources>