<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeClass" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightText</item>
        <item name="colorPrimaryVariant">@color/darkText</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

   <style name="BottomAppBarOverlay">
       <item name="colorControlNormal">@color/white</item>

   </style>

    <style name="Theme.Dialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/navigation_text_color</item>
    </style>

    <style name="Theme.TimeDialog" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorAccent">@color/navigation_text_color</item>
    </style>





</resources>