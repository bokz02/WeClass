<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <corners android:radius="5dp"/>
                <stroke android:width="1dp" android:color="@color/navigation_text_color"/>
                <solid android:color="@color/navigation_text_color_pressed"/>
            </shape>

    </item>


    <item android:color="@color/navigation_text_color">
        <shape android:shape="rectangle">
            <solid android:color="@color/navigation_text_color"/>
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="@color/navigation_text_color"/>
        </shape>
    </item>



</selector>