<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeClassNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkText</item>
        <item name="colorPrimaryVariant">@color/darkText</item>
        <item name="colorOnPrimary">@color/darkText</item>
        <item name="colorSecondary">@color/darkText</item>
        <item name="colorSecondaryVariant">@color/darkText</item>
        <item name="colorOnSecondary">@color/darkText</item>
        <item name="android:statusBarColor" >@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BottomAppBarOverlay">
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="Theme.Dialog" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorOnPrimary">@color/white1</item>
        <item name="colorPrimary">@color/white1</item>
        <item name="colorSecondaryVariant">@color/darkText</item>

        <!-- Switch button -->
        <item name="colorControlActivated">@color/teal_200</item>
        <item name="colorSwitchThumbNormal">@color/white1</item>
        <item name="trackTint">@color/teal_700</item>

    </style>

    <!-- CardView Background color -->
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/black3</item>
    </style>




    <style name="Theme.TimeDialog" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorAccent">@color/navigation_text_color</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorAccent">@color/navigation_text_color</item>
    </style>

    <style name="Theme.AppCompat.Custom"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/splashScreenBackground</item>
    </style>

    <style name="Theme.NothingTheme" parent="Theme.MaterialComponents.Light">

    </style>


    <style name="PoppinsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>


    <style name="Theme.WeClass.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <!-- SplashScreen -->

    -<style parent="Theme.MaterialComponents.DayNight.NoActionBar" name="SplashScreen">

    <item name="android:windowBackground">@drawable/bg_splash</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
    </style>


</resources>