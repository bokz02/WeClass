<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentlist.profile.assignments.Assignments">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".9"/>

    <TextView
        android:id="@+id/textViewA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Assignments"
        android:textColor="@color/darkText"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/backButtonAssignments"
        app:layout_constraintStart_toEndOf="@+id/backButtonAssignments"
        app:layout_constraintTop_toTopOf="@+id/backButtonAssignments" />

    <TextView
        android:id="@+id/noTextTextViewAssignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently no assignments to display."
        android:textColor="@color/cancelButtonPressed"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/noViewViewAssignments"
        app:layout_constraintEnd_toEndOf="@+id/noViewViewAssignments"
        app:layout_constraintStart_toStartOf="@+id/noViewViewAssignments" />

    <View
        android:id="@+id/noViewViewAssignments"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_no_file"
        app:layout_constraintBottom_toBottomOf="@id/guide2"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toTopOf="@id/guide1" />

    <ImageButton
        android:id="@+id/backButtonAssignments"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_simple_back"
        android:backgroundTint="@color/darkText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subjectIDStudentAssignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="subjectID"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/studentIDStudentAssignments"
        app:layout_constraintStart_toStartOf="@+id/studentIDStudentAssignments"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/assignmentsStudentAssignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignment"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/subjectIDStudentAssignments"
        app:layout_constraintStart_toStartOf="@+id/subjectIDStudentAssignments"
        app:layout_constraintTop_toBottomOf="@+id/subjectIDStudentAssignments" />

    <TextView
        android:id="@+id/finalsStudentAssignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finals"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/assignmentsStudentAssignments"
        app:layout_constraintTop_toBottomOf="@+id/subjectIDStudentAssignments" />

    <TextView
        android:id="@+id/midtermTextViewStudentAssignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Midterm"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/assignmentsStudentAssignments"
        app:layout_constraintTop_toBottomOf="@+id/subjectIDStudentAssignments" />

    <TextView
        android:id="@+id/studentIDStudentAssignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="studentID"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Midterm"
        android:textColor="@color/darkText"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/guide1"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Finals"
        android:layout_marginEnd="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="25dp"
        android:textColor="@color/darkText"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintBottom_toBottomOf="@id/guide5" />

    <TextView
        android:id="@+id/noTextTextViewAssignments2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently no activities to display."
        android:textColor="@color/cancelButtonPressed"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/noViewViewAssignments2"
        app:layout_constraintEnd_toEndOf="@+id/noViewViewAssignments2"
        app:layout_constraintStart_toStartOf="@+id/noViewViewAssignments2" />

    <View
        android:id="@+id/noViewViewAssignments2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_no_file"
        app:layout_constraintBottom_toBottomOf="@id/guide6"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toTopOf="@id/guide5" />

    <com.example.weclass.ExtendedRecyclerView
        android:id="@+id/studentAssignmentsRecView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/guide2"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toTopOf="@+id/guide1" />

    <com.example.weclass.ExtendedRecyclerView
        android:id="@+id/studentAssignmentsRecView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guide5"
        app:layout_constraintBottom_toBottomOf="@+id/guide6"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintEnd_toEndOf="@id/guide4"/>

</androidx.constraintlayout.widget.ConstraintLayout>