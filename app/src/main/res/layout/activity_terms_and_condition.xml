            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="2. Subject to these Terms, the App and any services provided via the App (&quot;Services&quot;) are intended for (and your license herein is limited to) use by teachers to assist them with organization and management of classes and students. The App and Services are not intended to be used by another user or for any other purpose."
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="3. Please read these Terms carefully before downloading, accessing or using the App. By downloaing the App or clicking the &quot;Accept&quot; button you agree to these Terms, which will bind you."
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp" />

