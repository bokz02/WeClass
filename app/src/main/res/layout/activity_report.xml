                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.	Attendance Summary"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/darkText"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can export either today's or all-time attendance from your class using the Attendance Summary report."
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="30dp"
                android:justificationMode="inter_word"
                android:layout_marginEnd="30dp"
                android:textColor="@color/darkText"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to generate it?"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"
                android:justificationMode="inter_word"
                android:layout_marginTop="15dp"
                android:textColor="@color/darkText"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1) Open your class"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="15dp"
                android:justificationMode="inter_word"
                android:textColor="@color/darkText"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2)	Go to the &quot;Attendance tab&quot;"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:justificationMode="inter_word"
                android:layout_marginTop="15dp"
                android:textColor="@color/darkText"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:src="@drawable/atten2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3)	Select the three dots located in the upper rightnt profile."
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="15dp"
                android:justificationMode="inter_word"
                android:textColor="@color/darkText"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:src="@drawable/atten1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
