        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButtonEditSubject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_bg"
            android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:drawableTint="@color/black1"
            android:fontFamily="@font/poppins_regular"
            android:textAllCaps="false"

            android:textSize="14sp"
            app:backgroundTint="@color/cancelButtonNotPressed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/updateButtonSubject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:text="Update"
            android:layout_marginEnd="10dp"
            android:textAllCaps="false"
            android:textColor="@color/black1"
