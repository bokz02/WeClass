<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="2dp"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:padding="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lastNameRecViewGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="32dp"
            android:text="Last"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/lightText"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.229" />

        <TextView
            android:id="@+id/firstNameRecViewGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="First"
            android:textColor="@color/lightText"
            android:textSize="14sp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/lastNameRecViewGrade"
            app:layout_constraintTop_toBottomOf="@+id/lastNameRecViewGrade" />

        <TextView
            android:id="@+id/commaRecViewGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text=","
            android:textColor="@color/lightText"
            app:layout_constraintBottom_toBottomOf="@+id/lastNameRecViewGrade"
            app:layout_constraintStart_toEndOf="@+id/lastNameRecViewGrade"
            app:layout_constraintTop_toTopOf="@+id/lastNameRecViewGrade" />

        <EditText
            android:id="@+id/gradeTextViewGrade"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/transparent_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:textColor="@color/black1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/submitButtonRecViewGrade"
            app:layout_constraintEnd_toStartOf="@+id/submitButtonRecViewGrade"
            app:layout_constraintTop_toTopOf="@+id/submitButtonRecViewGrade" />

        <View
            android:id="@+id/view13"
            android:layout_width="35dp"
            android:layout_height="3dp"
            android:background="@color/grayText"
            app:layout_constraintEnd_toEndOf="@+id/gradeTextViewGrade"
            app:layout_constraintStart_toStartOf="@+id/gradeTextViewGrade"
            app:layout_constraintTop_toBottomOf="@id/gradeTextViewGrade" />

        <TextView
            android:id="@+id/studentIDGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="student id"
            android:padding="5dp"
            android:textSize="9sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/taskNumberRecViewGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="task number"
            android:padding="5dp"
            android:textSize="9sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/studentIDGrade"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subjectIDTextViewRecViewGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="subject id"
            android:padding="5dp"
            android:textSize="9sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentIDGrade" />

        <TextView
            android:id="@+id/scoreTExt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Score:"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/view13"
            app:layout_constraintEnd_toStartOf="@+id/gradeTextViewGrade"
            app:layout_constraintTop_toTopOf="@+id/gradeTextViewGrade" />

        <TextView
            android:id="@+id/taskTypeTextViewRecViewGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="task type"
            android:padding="5dp"
            android:textSize="9sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/subjectIDTextViewRecViewGrade"
            app:layout_constraintTop_toBottomOf="@+id/studentIDGrade" />

        <TextView
            android:id="@+id/gradingPeriodTextViewRecViewGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="period"
            android:padding="5dp"
            android:textSize="9sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/subjectIDTextViewRecViewGrade"
            app:layout_constraintTop_toBottomOf="@+id/taskTypeTextViewRecViewGrade" />

        <ImageButton
            android:id="@+id/submitButtonRecViewGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ic_green_check"
            android:backgroundTint="#EF5350"
            android:hint="Grade"
            android:paddingHorizontal="5dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>