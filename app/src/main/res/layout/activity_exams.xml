<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentlist.profile.exams.Exams"
    android:background="@drawable/bg_nnavi">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".9"/>

    <TextView
        android:id="@+id/textViewA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exams"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noTextTextViewExams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently no exams to display."
        android:textColor="@color/cancelButtonPressed"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/noViewViewExams"
        app:layout_constraintEnd_toEndOf="@+id/noViewViewExams"
        app:layout_constraintStart_toStartOf="@+id/noViewViewExams" />

    <View
        android:id="@+id/noViewViewExams"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_no_file"
        app:layout_constraintBottom_toBottomOf="@id/guide2"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toTopOf="@id/guide1" />

    <TextView
        android:id="@+id/noTextTextViewExams2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently no exams to display."
        android:textColor="@color/cancelButtonPressed"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/noViewViewExams2"
        app:layout_constraintEnd_toEndOf="@+id/noViewViewExams2"
        app:layout_constraintStart_toStartOf="@+id/noViewViewExams2" />

    <View
        android:id="@+id/noViewViewExams2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_no_file"
        app:layout_constraintBottom_toBottomOf="@id/guide6"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toTopOf="@id/guide5" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Finals"
        android:layout_marginEnd="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintBottom_toBottomOf="@id/guide5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Midterm"
        android:layout_marginEnd="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintBottom_toBottomOf="@id/guide1" />

    <ImageButton
        android:id="@+id/backButtonExams"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/iconback2"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subjectIDStudentExams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subjectID"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/studentIDStudentExams"
        app:layout_constraintStart_toStartOf="@+id/studentIDStudentExams"
        app:layout_constraintTop_toBottomOf="@+id/studentIDStudentExams" />

    <TextView
        android:id="@+id/studentIDStudentExams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="studentID"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.weclass.ExtendedRecyclerView
        android:id="@+id/studentExamsRecView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guide1"
        app:layout_constraintBottom_toBottomOf="@+id/guide2"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintEnd_toEndOf="@id/guide4"/>

    <com.example.weclass.ExtendedRecyclerView
        android:id="@+id/studentExamsRecView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guide5"
        app:layout_constraintBottom_toBottomOf="@+id/guide6"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintEnd_toEndOf="@id/guide4"/>

</androidx.constraintlayout.widget.ConstraintLayout>