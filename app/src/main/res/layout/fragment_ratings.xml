<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ratings.Ratings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.89" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".07"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".93"/>

        <TextView
            android:id="@+id/subjectIDRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="subjectID"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subjectCodeRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="180dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Final ratings"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/darkText"
            app:layout_constraintEnd_toEndOf="@id/guide4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guide3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/courseTextViewRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="BSCS 3"
            android:textAllCaps="true"
            android:textColor="@color/darkText"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subjectCodeTextViewRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Subject code"
            android:textAllCaps="true"
            android:visibility="gone"
            android:textColor="@color/darkText"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guide1"
            app:layout_constraintStart_toStartOf="@+id/guide3"
            app:layout_constraintTop_toBottomOf="@+id/subjectCodeRecords"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/noStudentTextViewRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currently you don't have student, add one."
            android:textColor="@color/cancelButtonPressed"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/noStudentViewRatings"
            app:layout_constraintEnd_toEndOf="@+id/noStudentViewRatings"
            app:layout_constraintStart_toStartOf="@+id/noStudentViewRatings" />

        <View
            android:id="@+id/noStudentViewRatings"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_no_file"
            app:layout_constraintBottom_toTopOf="@+id/guide2"
            app:layout_constraintEnd_toEndOf="@id/guide4"
            app:layout_constraintStart_toStartOf="@id/guide3"
            app:layout_constraintTop_toTopOf="@id/guide1" />

        <com.example.weclass.ExtendedRecyclerView
            android:id="@+id/extendedRecViewRatings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="@id/guide4"
            app:layout_constraintStart_toStartOf="@id/guide3"
            app:layout_constraintTop_toTopOf="@id/guide1"
            app:layout_constraintBottom_toBottomOf="@id/guide2"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>