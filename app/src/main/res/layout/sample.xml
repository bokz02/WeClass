<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tasks.AddTask"
    android:background="@color/cleanMainBackground">



    <ImageButton
        android:id="@+id/backButtonAddTasks"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/iconback2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/parentIDTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="parent id"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/guide2"
        app:layout_constraintEnd_toEndOf="@id/guide4"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toTopOf="@id/guide1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Add Task"
                android:textColor="@color/darkText"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Task Information"
                android:textColor="@color/darkText"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginTop="28dp"
                android:background="#ECECEC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@id/guide5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".05" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginTop="8dp"
                android:background="#ECECEC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@id/guide6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5" />

            <EditText
                android:id="@+id/descriptionEditTextEdit"
                android:layout_width="292dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_text_style"
                android:drawableStart="@drawable/ic_desc1"
                android:drawablePadding="5dp"
                android:drawableTint="@color/darkText"
                android:hint="Description"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="1000"
                android:maxLines="11"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/guide6"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/guide5"
                app:layout_constraintTop_toBottomOf="@+id/dateTextViewTaskEdit" />

            <EditText
                android:id="@+id/scoreEditTextEdit"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_text_style"
                android:drawableStart="@drawable/ic_score1"
                android:drawableTint="@color/darkText"
                android:gravity="center"
                android:hint="Items"
                android:inputType="textCapSentences|textMultiLine|number|numberSigned"
                android:maxLength="7"
                android:textSize="14dp"
                android:paddingStart="5dp"
                app:layout_constraintEnd_toEndOf="@id/guide6"
                app:layout_constraintHorizontal_bias="0.479"
                app:layout_constraintStart_toStartOf="@+id/guide7"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <EditText
                android:id="@+id/taskNumberEditText"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/input_text_style"
                android:gravity="center"
                android:textSize="14dp"
                android:hint="#"
                android:inputType="number"
                android:maxLength="2"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="5dp"
                app:layout_constraintStart_toEndOf="@+id/taskNumber"
                app:layout_constraintTop_toTopOf="@+id/taskNumber" >
            </EditText>




            <TextView
                android:id="@+id/progressTaskEditText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="36dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/darkText"
                android:gravity="center"
                android:hint="Progress"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Progress"
                app:drawableStartCompat="@drawable/ic_progress1"
                app:layout_constraintEnd_toStartOf="@+id/guide6"
                app:layout_constraintTop_toBottomOf="@+id/scoreEditTextEdit" />

            <TextView
                android:id="@+id/taskTypeTextViewEdit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_folder1"
                android:drawablePadding="5dp"
                android:drawableTint="@color/darkText"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="Select task type"
                android:text="Select task type"
                app:layout_constraintStart_toStartOf="@id/guide5"
                app:layout_constraintTop_toBottomOf="@+id/taskNumber" />

            <TextView
                android:id="@+id/taskNumber"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="Task number:"
                app:layout_constraintEnd_toStartOf="@+id/guide7"
                app:layout_constraintHorizontal_bias="0.019"
                app:layout_constraintStart_toStartOf="@id/guide5"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/dateTextViewTaskEdit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="28dp"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:drawableTint="@color/darkText"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="Deadline"
                android:text="Deadline"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_deadline1"
                app:layout_constraintStart_toStartOf="@id/guide5"
                app:layout_constraintTop_toBottomOf="@+id/taskTypeTextViewEdit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateButtonTaskEdit"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Create"
                android:textAllCaps="false"
                android:textColor="@color/darkText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guide6"
                app:layout_constraintStart_toStartOf="@id/guide7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButtonTaskEdit"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/darkText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guide7"
                app:layout_constraintStart_toStartOf="@id/guide5"
                app:strokeColor="@color/lightText" />

            <ImageView
                android:id="@+id/horizontalLine"
                android:layout_width="0dp"
                android:layout_height=".75dp"
                android:background="#ECECEC"
                app:layout_constraintBottom_toTopOf="@+id/cancelButtonTaskEdit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/verticalLine"
                android:layout_width=".2dp"
                android:layout_height="50dp"
                android:background="#ECECEC"
                app:layout_constraintEnd_toEndOf="@id/guide7"
                app:layout_constraintTop_toBottomOf="@+id/horizontalLine" />


            <RelativeLayout
                android:layout_width="151dp"
                android:layout_height="29dp"
                android:background="@drawable/input_text_style"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/taskTypeTextViewEdit"
                app:layout_constraintEnd_toStartOf="@+id/guide6"
                app:layout_constraintHorizontal_bias="0.148"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskNumber"
                app:layout_constraintVertical_bias="0.612">


                <EditText
                    android:id="@+id/sample"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="22dp"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="#"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingHorizontal="5dp"
                    android:textSize="14dp">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Task Number:"
                    android:textSize="14sp" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>